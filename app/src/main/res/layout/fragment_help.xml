<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HelpFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:id="@+id/llContent1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp"
            android:weightSum="22">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:padding="8dp"
                android:text="Ques. How will the training be delivered?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="8dp"
                android:layout_weight="16"
                android:text="Ans. You will be taught using pre-recorded videos and text tutorials. The training has quizzes, assignments and tests to help you learn bette. At the end of the training, you will attempt a project to get hands-on practice of what you learn during your training."
                android:textSize="14sp"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llContent2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llContent1"
            android:layout_marginBottom="12dp"
            android:orientation="vertical"
            android:weightSum="22">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:padding="8dp"
                android:text="Ques. What wil be the timings of the training?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="8dp"
                android:layout_weight="16"
                android:text="Ans. As this is a purely online training program, you can choose to learn at any time of the day. We will recommend a pace to be followed throughout the program, but the actual timings and learning hours can be decided by students according to their convenience."
                android:textSize="14sp"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llContent3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llContent2"
            android:layout_marginBottom="12dp"
            android:orientation="vertical"
            android:weightSum="12">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:padding="8dp"
                android:text="Ques. What is the duration of training?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="8dp"
                android:layout_weight="6"
                android:text="Ans. The training duration is of 6 weeks."
                android:textSize="14sp"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llContent4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llContent3"
            android:layout_marginBottom="12dp"
            android:orientation="vertical"
            android:weightSum="17">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:padding="8dp"
                android:text="Ques. How much time I spend everyday?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="8dp"
                android:layout_weight="11"
                android:text="Ans. We recommend spending 10-12 hours per week. However, the actual learning hours can be decided by you as per your convenience."
                android:textSize="14sp"
                android:textColor="@color/colorAccent" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llContent5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/llContent4"
            android:layout_marginBottom="12dp"
            android:weightSum="22">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:padding="8dp"
                android:text="Ques. How will the training be delivered?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="8dp"
                android:layout_weight="16"
                android:text="Ans. You will be taught using pre-recorded videos and text tutorials. The training has quizzes, assignments and tests to help you learn bette. At the end of the training, you will attempt a project to get hands-on practice of what you learn during your training."
                android:textSize="14sp"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llContent6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llContent5"
            android:layout_marginBottom="12dp"
            android:orientation="vertical"
            android:weightSum="22">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:padding="8dp"
                android:text="Ques. What wil be the timings of the training?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="8dp"
                android:layout_weight="16"
                android:text="Ans. As this is a purely online training program, you can choose to learn at any time of the day. We will recommend a pace to be followed throughout the program, but the actual timings and learning hours can be decided by students according to their convenience."
                android:textSize="14sp"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llContent7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llContent6"
            android:layout_marginBottom="12dp"
            android:orientation="vertical"
            android:weightSum="12">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:padding="8dp"
                android:text="Ques. What is the duration of training?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="8dp"
                android:layout_weight="6"
                android:text="Ans. The training duration is of 6 weeks."
                android:textSize="14sp"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llContent8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llContent7"
            android:layout_marginBottom="100dp"
            android:orientation="vertical"
            android:weightSum="17">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:padding="8dp"
                android:text="Ques. How much time I spend everyday?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="8dp"
                android:layout_weight="11"
                android:text="Ans. We recommend spending 10-12 hours per week. However, the actual learning hours can be decided by you as per your convenience."
                android:textSize="14sp"
                android:textColor="@color/colorAccent" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>